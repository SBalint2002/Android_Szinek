<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/layout"
    android:background="@color/white">

    <com.google.android.material.slider.Slider
        android:id="@+id/slider1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:paddingTop="20dp"
        android:valueFrom="0"
        android:valueTo="255"
        android:stepSize="1"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/slider1"
        android:paddingTop="20dp"
        android:valueFrom="0"
        android:valueTo="255"
        android:stepSize="1"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/slider2"
        android:paddingTop="20dp"
        android:valueFrom="0"
        android:valueTo="255"
        android:stepSize="1"/>

    <TextView
        android:id="@+id/pirosSzin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slider3"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:text="Red : 0"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/zoldSzin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pirosSzin"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:text="Green : 0"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kekSzin"
        android:text="Blue : 0"
        android:layout_below="@id/zoldSzin"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="200dp"
        android:layout_below="@id/kekSzin"
        android:id="@+id/textSzin"
        android:text="(0, 0, 0)"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:gravity="center"
        />



</RelativeLayout>